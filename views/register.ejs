<%- include ('partials/header') %>

<style type="text/css">
  body {
    background-color: #dadada;
  }
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 500px;
    /* height: 800px; */
  }
